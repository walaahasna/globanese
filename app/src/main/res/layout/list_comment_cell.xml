<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"


    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
      android:paddingTop="10dp"
       android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            app:civ_border_width="0dp"

            app:civ_border_color="#ffffff"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

            </FrameLayout>




        </LinearLayout>
    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/profile_name"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="USERNAME"
        android:padding="2dp"
        android:textColor="#48494b"

        />
    <ImageView
     android:layout_marginLeft="180dp"
        android:layout_gravity="right|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_options_icon"
        android:tint="#d4d4d4"

        />
    </LinearLayout>
    <TextView
        android:padding="4dp"
      android:layout_marginTop="4dp"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#686868"
        android:textSize="13sp"
        android:id="@+id/profile_text"
        android:text="Follow along with using jhy. Don't forget to use the filters to find the best Tweets first. "
        />
</LinearLayout>

</LinearLayout>


    <FrameLayout
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="left"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="2h"
                android:textColor="#adadad"
             android:layout_marginLeft="60dp"
                android:id="@+id/profile_time"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#55cd87"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:text="Like"

                />

            <TextView
                android:id="@+id/profile_No_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cfcfcf"
                android:textSize="12sp"
                android:text="(2)"
                android:paddingLeft="3dp"
                android:paddingRight="5dp"
                />




        </LinearLayout>


    </FrameLayout>

</LinearLayout>