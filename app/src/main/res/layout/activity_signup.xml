<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_alignParentTop="true"
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_gravity="center"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_below="@+id/action_bar"
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bl"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo" />

    </LinearLayout>

    <ScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/bl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/first_name"
                    android:maxLines="1"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/round_login_edittext"
                    android:hint="First Name"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textSize="@dimen/text_size_normal" />

                <EditText
                    android:id="@+id/last_name"
                    android:maxLines="1"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/round_login_edittext"
                    android:hint="Last Name"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <EditText
                android:id="@+id/email"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/round_login_edittext"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColorHint="@color/edittext_hint_color"
                android:textSize="@dimen/text_size_normal" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_login_edittext"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColorHint="@color/edittext_hint_color"
                android:textSize="@dimen/text_size_normal"
                android:textDirection="ltr"
                android:gravity="left|center_vertical"
                />


            <EditText
                android:id="@+id/password_confirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_login_edittext"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColorHint="@color/edittext_hint_color"
                android:textSize="@dimen/text_size_normal"
                android:textDirection="ltr"
                android:gravity="left|center_vertical"
                />


            <Button
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/round_login_button"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By clicking sign up, you agree to our "
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_normal"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="and that you have read our "
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/data_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Policy "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_normal"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="including our "
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/cookie_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cookie Policy "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_normal"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
